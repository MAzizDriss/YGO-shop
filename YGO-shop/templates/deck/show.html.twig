{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block main %}
    <h1>Deck</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ deck.id }}</td>
            </tr>
            <tr>
                <th>Deck's name</th>
                <td>{{ deck.dName }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ deck.member }}</td>
            </tr>
        </tbody>
    </table>
    <h2 >Cards </h2>

    {% for card in deck.cards %}
    <li>
        <a href="{{ path('app_card_show', {'id' : card.id}) }}">{{ card }}</a>
    </li>
    {% endfor %}

    <a href="{{ path('app_deck_index') }}">back to list</a>

    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">edit</a>

    {{ include('deck/_delete_form.html.twig') }}
{% endblock %}
