{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block main %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ member.description }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Decks</h2>
    {% for deck in member.Decks %}
    <li><a href="{{ path('app_deck_show', {'id' : deck.id}) }}">{{ deck }}</a></li>
    {% endfor %}

    <a href="{{ path('app_deck_new', {'id': member.id}) }}">Create new deck</a>
    <a href="{{ path('app_showroom_new',{'id':member.id}) }}">Create new Showroom</a>

    <a href="{{ path('app_member_index') }}">back to list</a>

    <a href="{{ path('app_member_edit', {'id': member.id}) }}">edit</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
