{% extends 'base.html.twig' %}

{% block title %}Deck index{% endblock %}

{% block main %}
    <h1>Deck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Deck Name</th>
                <th> Owner </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deck in decks %}
            <tr>
                <td>{{ deck.id }}</td>
                <td>{{ deck.dName }}</td>
                <td>{{ deck.member }}</td>
                <td>
                    <a href="{{ path('app_deck_show', {'id': deck.id}) }}">show</a>
                    <a href="{{ path('app_deck_edit', {'id': deck.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_deck_new', {'id': member.id}) }}">Create new</a> #}
{% endblock %}
